# ===========================================
# Aster Cloud Platform - Environment Variables
# ===========================================

# App
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:8080

# Vercel Cron Jobs (Demo cleanup)
# Generate with: openssl rand -hex 32
CRON_SECRET=your-cron-secret-here

# Database (Vercel Postgres / Supabase / Neon)
DATABASE_URL=postgresql://...

# K3S PostgreSQL via Cloudflare Hyperdrive (可选)
# 设置 USE_HYPERDRIVE=true 启用 k3s 数据库
USE_HYPERDRIVE=false
HYPERDRIVE_DATABASE_URL=postgresql://user:password@<hyperdrive-id>.hyperdrive.cloudflare.com:5432/database?sslmode=require

# Authentication (NextAuth.js)
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-here

# OAuth Providers
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Stripe
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...

# Stripe Price IDs
STRIPE_PRICE_PRO_MONTHLY=price_...
STRIPE_PRICE_PRO_YEARLY=price_...
STRIPE_PRICE_TEAM_MONTHLY=price_...
STRIPE_PRICE_TEAM_YEARLY=price_...

# Resend (Email)
RESEND_API_KEY=re_...
RESEND_FROM_EMAIL=noreply@aster-lang.cloud

# Mixpanel (Analytics)
NEXT_PUBLIC_MIXPANEL_TOKEN=

# Sentry (Error Tracking)
NEXT_PUBLIC_SENTRY_DSN=
SENTRY_AUTH_TOKEN=

# Feature Flags
NEXT_PUBLIC_ENABLE_TRIAL=true
NEXT_PUBLIC_TRIAL_DAYS=14

# ===========================================
# Aster Policy API (K3S Deployment)
# ===========================================
# Policy API 基础 URL (用于策略评估)
NEXT_PUBLIC_ASTER_POLICY_API_URL=https://policy.aster-lang.cloud

# Policy API WebSocket URL (用于实时预览)
NEXT_PUBLIC_ASTER_POLICY_WS_URL=wss://policy.aster-lang.cloud/ws/preview

# API 请求超时 (毫秒)
ASTER_POLICY_API_TIMEOUT=30000